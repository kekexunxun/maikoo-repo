page {
  background: #fff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-search-bar__text {
  margin-top: -3px;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.mini-name {
  color: #09bb07;
  font-size: 28rpx;
  margin: 20rpx;
}

.searchList {
  text-align: center;
  margin: 160rpx 0;
}

/*  搜索结果的minilist  */

.mini-info {
  display: flex;
  border: 1rpx solid rgba(220, 220, 220, 0.8);
  flex-direction: row;
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  border-radius: 10px;
}

.mini-image {
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.mini-pic {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}

.info-right {
  width: 75%;
  display: flex;
  flex-direction: row;
}

.info-data {
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #333;
  width: 80%;
  align-items: left;
}

.data-detail {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.data-detail-left {
  width: 40%;
  text-align: left;
}

.action {
  width: 20%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.action image {
  width: 50rpx;
  height: 50rpx;
}

.action navigator {
  display: flex;
}

.mini-list {
  display: flex;
  padding: 0 2%;
  flex-direction: column;
  margin-top: 30rpx;
}

/*  未搜索到结果时信息展示  */

.nothing-info {
  font-size: 36rpx;
  color: #999;
  display: flex;
  align-items: centerl;
  justify-content: space-around;
  margin: 180rpx 0;
}

/* 不展示搜索结果时展示的界面 */

.search-list-container {
  width: 96%;
  padding: 0 2%;
}

/* 用户搜索历史 */

.search-history {
  display: flex;
  flex-direction: column;
  line-height: 70rpx;
}

.search-history-title {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}

.search-history-title-left {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  width: 90%;
}

.search-history-title-right {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 10%;
}

.search-history-title-right image {
  width: 40rpx;
  height: 40rpx;
}

.search-history-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 15rpx 0;
}

.search-history-item {
  background: #f6f6f6;
  color: #999;
  font-size: 24rpx;
  padding: 5rpx 30rpx;
  line-height: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
