/* modal */

.modal {
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  opacity: 0.7;
  filter: 0.7;
  background: rgba(0, 0, 0, 0.6);
}

/* modal-container */

.modal-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: safe center;
  position: fixed;
  z-index: 3;
  top: 0;
}

.modal-item {
  margin: 0 10%;
  height: 310rpx;
  background: #fff;
  width: 80%;
  border-radius: 5px;
}

.modal-title {
  line-height: 100rpx;
  font-size: 34rpx;
  color: #333;
  text-align: center;
}

.input-container {
  margin: 20rpx 15%;
}

.modal-input {
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  color: #333;
  font-size: 28rpx;
  line-height: 70rpx;
  min-height: 70rpx;
  text-align: center;
  border-radius: 10px;
}

.modal-btn {
  display: flex;
  flex-direction: row;
}

.modal-btn-cancel, .modal-btn-confirm {
  width: 50%;
  height: 100rpx;
}

.modal-btn-cancel button, .modal-btn-confirm button {
  font-size: 34rpx;
  border-radius: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  color: #333;
  margin: 15rpx 0;
}

button::after {
  border: none;
}

.modal-btn-confirm button {
  color: #3cc51f;
}

.modal-btn-cancel button {
  color: #333;
  border-right: 1rpx solid rgba(220, 220, 220, 0.5);
}
