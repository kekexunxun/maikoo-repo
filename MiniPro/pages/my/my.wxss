page {
  background: #f2f2f2;
}

.userinfo {
  height: 140px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.userinfo-avatar {
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 5px;
  font-size: 14px;
  color: #c8a063;
}

.logout {
  display: flex;
  flex-direction: row;
  justify-content: safe center;
  align-items: center;
}

.logout image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
}

.logout button {
  background: #f8f8f8;
  color: #333;
  font-size: 24rpx;
  border-radius: 20px;
  height: 50rpx;
  line-height: 50rpx;
}

/*  用户操作列表  */

.menu-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 订单 */

.order {
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #fff;
  margin-top: 15rpx;
}

.order-item {
  width: 25%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 110rpx;
  font-size: 26rpx;
}

.order-item image {
  width: 50rpx;
  height: 50rpx;
}

/* 通用选项 */

.common-menu {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}

.common-menu button {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  padding: 0;
  border-radius: 0;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}

.menu-btn-top {
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
}

.no-top {
  border-top: none;
}

.menu-btn-split {
  margin-top: 15rpx;
}

.menu-btn-left {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.menu-btn-left image {
  width: 40rpx;
  height: 40rpx;
}

.menu-btn-middle {
  width: 80%;
  text-align: left;
}

button::after {
  border: none;
}
