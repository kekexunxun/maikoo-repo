/* msg-img */

.page {
  margin: 0 2%;
  width: 96%;
  box-sizing: border-box;
}

.msg-img {
  width: 100%;
}

.msg-img image {
  height: 300rpx;
  width: 100%;
  margin: 15rpx 0;
  border-radius: 5px;
}

.msg-title {
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.msg-content {
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
  text-indent: 1rem;
  margin-bottom: 50rpx;
}

.msg-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 60rpx;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.5);
}

.msg-info-left {
  width: 25%;
}

.msg-info-right {
  width: 75%;
}
