/* pages/others/calendar/calendar.wxss */

.text_center {
  text-align: center;
}

.selected_date {
  padding: 20rpx;
  overflow: hidden;
}

.selected_date>view {
  width: 33.3%;
  float: left;
  font-size: 34rpx;
  font-weight: 500;
}

.calendar_panel {
  width: 100%;
  height: 600rpx;
}

.calendar_box {
  width: 100%;
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #ececec;
}

.weekday_label {
  width: 14.28%;
  float: left;
  display: block;
  text-align: center;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.weekday_label>text {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
}

.select_icon {
  width: 30rpx;
  height: 30rpx;
}

.active_date {
  background: #148447;
  color: #fff;
  border-radius: 50%;
}

.show_box {
  padding: 20rpx;
  font-size: 26rpx;
}

.calendar_box:nth-child(2) .weekday_label {
  float: right;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.class-item {
  display: flex;
  flex-direction: column;
  line-height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  width: 96%;
  margin: 0 2% 15rpx 2%;
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  border-radius: 5px;
  box-sizing: border-box;
}

.class-item-line {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.class-item-left {
  width: 25%;
}

.class-item-right {
  width: 75%;
}

.class-item-bottom{
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
  color: #3cc51f;
}

.class-item-title {
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}