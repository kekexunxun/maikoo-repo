.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 90rpx;
}

/* 重写部分商品样式以满足购物车界面需求 */

.goods {
  margin-bottom: 15rpx;
  background-color: #fff;
}

.goods-right-image {
  background-color: #fff;
  height: 50rpx;
  width: 50rpx;
}

.goods-right-image image {
  width: 50rpx;
  height: 50rpx;
}

.goods-middle {
  padding-left: 10rpx;
}

.goods-count {
  display: flex;
  flex-direction: row;
}

.goods-price {
  width: 50%;
}

.goods-num {
  width: 50%;
  display: flex;
  flex-direction: row;
  height: 40rpx;
  line-height: 40rpx;
  align-items: center;
}

.goods-num-content {
  display: flex;
  align-items: center;
  margin: 0 auto;
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  border-radius: 15px;
}

.goods-num image {
  width: 20rpx;
  height: 20rpx;
  padding: 0 15rpx;
}

.goods-num input {
  width: 70rpx;
  border-left: 1rpx solid rgba(220, 220, 220, 0.6);
  border-right: 1rpx solid rgba(220, 220, 220, 0.6);
  text-align: center;
  color: #999;
  font-size: 24rpx;
  /* height: 40rpx; */
  /* min-height: 40rpx; */
}

/* 底部按钮-去下单 */

.bottom-btn {
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
}

.all-select-image {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.all-select-image image {
  width: 50rpx;
  height: 50rpx;
}

.btn-text {
  font-size: 30rpx;
  color: #333;
  width: 10%;
  text-align: left;
}

.bottom-price {
  width: 55%;
  font-size: 30rpx;
  padding-right: 25rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.bottom-price text {
  font-size: 32rpx;
  color: #ff9000;
}

.pay-btn {
  width: 25%;
}

.pay-btn button {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #ff9000;
  border-radius: 0;
  font-weight: 500;
}

button::after {
  border: none;
}

/* logi-content */
.logi-fee-content{
  display: flex;
  color: #333;
  line-height: 60rpx;
  background: #fff;
  width: 100%;
  margin-bottom: 15rpx;
  padding: 15rpx 0;
}

.logi-fee-text{
  width: 80%;
  margin: 0 auto;
  font-size: 26rpx;
  color: #ff9000;
  text-align: center;
  background: rgba(255, 144, 0, 0.1);
  border-radius: 20px;
}

.logi-text{
  text-decoration: underline;
}