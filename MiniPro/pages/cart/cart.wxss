/* 无订单 */

.no-order {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  color: #999;
  text-align: center;
  margin-top: 140rpx;
}

/* TAB BAR */

page {
  background-color: #f2f2f2;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

/* container */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin-bottom: 150rpx;
}

.mulit-select {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.mulit-select image {
  width: 40rpx;
  height: 40rpx;
}

/* order-list */

.order-list {
  display: flex;
  flex-direction: row;
  height: 240rpx;
  background: #fff;
  margin: 10rpx 10rpx 0 10rpx;
  border-radius: 5px;
}

.order-list-left {
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.order-list-left image {
  height: 150rpx;
  width: 150rpx;
}

.order-list-right {
  width: 65%;
  position: relative;
}

.order-list-right-title {
  position: absolute;
  left: 0;
  top: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  width: 48%;
}

.order-list-right-state {
  color: #f6a934;
  font-size: 30rpx;
  top: 180rpx;
  position: absolute;
}

.order-list-right-price-now {
  position: absolute;
  color: #999;
  font-size: 26rpx;
  right: 20rpx;
  top: 140rpx;
  left: 0;
}

.order-list-right-num {
  position: absolute;
  color: #333;
  right: 20rpx;
  top: 150rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* Image-number */

.image-number-right {
  display: flex;
  flex-flow: row;
  position: relative;
  margin-top: 14rpx;
  width: 50%;
}

.image-number-box {
  margin-right: 20rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  padding: 0;
  background: #f7f7f7;
  text-align: center;
  position: absolute;
  right: 0;
}

.image-number-right-text {
  width: 60rpx;
  font-size: 38rpx;
  /* line-height: 1.6rem; */
  color: #999;
  text-align: center;
}

.image-number-right-input {
  width: 80rpx;
  font-size: 32rpx;
  color: #999;
  line-height: 60rpx;
  height: 60rpx;
}

/*  底部按钮  */

.bottom-btn {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  position: fixed;
  bottom: 0;
}

.btn-service image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.btn-service {
  width: 23%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  border-radius: 0;
  height: 100rpx;
  background-color: #f8f8f8;
}

.btn-service text {
  line-height: 46rpx;
  margin-left: 20rpx;
  color: #333;
}

.btn-addcart {
  width: 45%;
  background-color: #f8f8f8;
  color: #333;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}

.btn-addcart text{
  font-size: 32rpx;
  color: #f6a934;
}

.btn-buy {
  width: 32%;
}

.btn-buy button {
  background-color: #f6a934;
  color: white;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
}

/*  去掉button的border和 border-radius */

button::after {
  border-radius: 0;
  border: none;
}

.no-cart {
  justify-content: space-between;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.no-cart text {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 0;
}

.order-promotion {
  width: 50%;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.promotion-name {
  color: #666;
  width: 100%;
  font-size: 26rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}

.no-cart image {
  width: 300rpx;
  height: 300rpx;
}

.tex-dec {
  text-decoration: line-through;
}

.delete-icon {
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 99;
}

.delete-icon image {
  width: 40rpx;
  height: 40rpx;
}
