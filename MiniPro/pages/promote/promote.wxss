/*  引入weui  */
@import '../../style/weui.wxss';

page{
  background: #f2f2f2;
}

.promote-item{
  display: flex;
  flex-direction: column;
  padding-left: 2%;
  padding-right: 2%;
  margin-bottom: 5px;
  height: 100px;
  background: white;
  margin-top: 5px;
}

.item-top{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}
.item-left{
  position: relative;
  height: 50%;
  line-height: 20px;
  width: 40%;
}
.item-left image{
  width: 50px;
  height: 50px;
  border-radius: 50px;
  margin-top: 20px;
}
.nickname{
  position: absolute;
  left: 60px;
  top: 23px;
  color: #333;
}

.goodname{
  position: absolute;
  left: 60px;
  top: 48px;
  color: #333;
}
.text-flow{
  width: 55%;
  font-size: 13px;
  line-height: 20px;
  text-overflow: ellipsis;
  overflow : hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
}

.item-bottom{
  line-height: 20px;
  font-size: 12px;
  color: #666;
  width: 100%;
  height: 30%;
}

.item-middle{
  display: flex;
  flex-direction: column;
  width: 30%;
  height: 100%;
  align-items: center;
  line-height: 20px;
}
.upper-image{
  height: 70%;
  margin-top: 5px;
}
.upper-image image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-top: 10px;
}
.upper-nickname{
  height: 20px;
  font-size: 12px;
  color: #666;
  width: 70%;
  text-align: center;
}

/*  右边  */
.item-right{
  width: 30%;
  display: flex;
  flex-direction: column;
  height: 100%;
  line-height: 25px;
  align-items: center;
  font-size: 14px;
  color: #666;
}
.item-right text{
  color: #f6a934;
  font-size: 18px;
}
.right-text{
  margin-top: 20%;
}


/*  底部加载图标  */
.bottom-msg{
  /* position: absolute; */
  width: 100%;
  height: 45px;
}

