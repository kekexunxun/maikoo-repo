/*  没有数据的时候  */
.nothing-container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.nothing{
  color: #333;
  font-size: 16px;
  text-align: center;
  line-height: 25px;
  margin-top: 180px;
}

/*  重写部分weui数据  */
.weui-loadmore_line{
  margin-top: 1.5em;
  margin-bottom: 0;
}
.weui-loadmore__tips_in-line{
  background-color: #f2f2f2;
}