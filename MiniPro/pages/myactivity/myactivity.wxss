page {
  background: #f9f9f9;
}

.container {
  box-sizing: border-box;
}

.activity-list {
  display: flex;
  margin: 10rpx 2%;
  flex-direction: column;
}

.activity-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: white;
  border-radius: 10px;
  margin: 10rpx 0;
  line-height: 50rpx;
  color: #666;
  font-size: 28rpx;
}

/*  没有活动时  */

.nothing {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.wait {
  font-size: 32rpx;
  color: #333;
}
