/*  票券  */

.ticket {
  background: white;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.ticket-title {
  font-size: 30rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.ticket-title-left {
  width: 50%;
  padding-left: 5%;
  color: #333;
}

.ticket-title-left text {
  padding-left: 10rpx;
  color: #666;
  text-align: bottom;
  font-size: 26rpx;
}

.ticket-title-right {
  width: 50%;
  position: relative;
  padding-right: 5%;
}

.ticket-title-right text {
  color: #999;
  position: absolute;
  right: 15%;
  font-size: 26rpx;
  vertical-align: bottom;
}

.ticket-title-right image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 5%;
  top: 20rpx;
}

.ticket-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 3%;
}

.ticket-item {
  width: 50%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ticket-item image {
  width: 320rpx;
  height: 320rpx;
  border-radius: 20px;
}

.ticket-item text {
  margin-top: 10px;
  font-size: 15px;
  color: #333;
}

/*  生活用品  */

.daily {
  background: white;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 15rpx;
}

/*  横向滚动  */

.recommend_scroll_x_box {
  padding-top: 8rpx;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box:first-child {
  padding-left: 24rpx;
}

.recommend_hot_box {
  width: 300rpx;
  height: 400rpx;
  /*  test  */
  padding-right: 24rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 300rpx;
  height: 300rpx;
}

.title {
  font-size: 26rpx;
  color: #666;
}

.desc {
  font-size: 24rpx;
  color: #e04e5b;
}

.title, .desc {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.text_center {
