/**index.wxss**/

.banner {
  height: 300rpx;
  width: 100%;
  margin-bottom: 20rpx;
}

.banner image {
  height: 300rpx;
  width: 100%;
}

/* list-item */

.list-item {
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  margin: 0 2% 15rpx 2%;
  border: 1rpx solid rgba(220, 220, 220, 0.5);
  border-radius: 5px;
  align-items: center;
  width: 96%;
  box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(220, 220, 220, 0.5);
}

.list-item image {
  width: 40rpx;
  height: 40rpx;
  padding-left: 30rpx;
}

.list-item text {
  padding-left: 30rpx;
}

/* 文字公告 */

.example {
  width: 100%;
  height: 70rpx;
  background: #FFD700;
  color: #353535;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  line-height: 70rpx;
  width: 100%;
}

.notice-img{
  position: absolute;
  left: 0;
  height: 70rpx;
  z-index: 99;
  background: #FFD700;
}

.notice-img image{
  width: 40rpx;
  height: 40rpx;
  margin: 15rpx 15rpx 0 15rpx;
}