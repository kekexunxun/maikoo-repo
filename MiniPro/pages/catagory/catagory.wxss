Page {
  background: #fff;
}

.container {
  width: 100%;
  display: flex;
  overflow: hidden;
}

.left_tabbar {
  width: 25%;
}

.right_content {
  width: 75%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.left_tabbar_item {
  color: #7c7c7c;
  font-size: 26rpx;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #fff;
}

.left_tabbar_list {
  background: #f8f8f8;
}

.left_tabbar .active {
  background: #fff;
  color: #000;
  transition: all 0.5s;
  animation: show 0.5s;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

@-webkit-keyframes show {
  0% {
    opacity: 0;
    transform: rotateY(180deg);
  }

  100% {
    opacity: 1;
    transform: rotateY(360deg);
  }
}

@keyframes show {
  0% {
    opacity: 0;
    transform: rotateY(180deg);
  }

  100% {
    opacity: 1;
    transform: rotateY(360deg);
  }
}

.tab_panel {
  margin: 0 20rpx;
  font-size: 26rpx;
}

.tab_panel view {
  padding: 20rpx;
}

/* tab右侧 */

.ad {
  height: 220rpx;
  width: 96%;
  padding: 0 2%;
}

.ad image {
  height: 200rpx;
  width: 100%;
  padding: 10rpx 0;
  border-radius: 15px;
}

/* 分类 */

.cat {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.cat-item {
  width: 31%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 32rpx;
  color: #333;
  padding: 1%;
  height: 180rpx;
}

.cat-item image {
  width: 80rpx;
  height: 80rpx;
}

.cat-item text {
  font-size: 26rpx;
  color: #333;
}
