/* class-item */

page {
  background: #f8f8f8;
}

.class-item {
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  border-radius: 5px;
  margin: 0 2% 15rpx 2%;
  display: flex;
  flex-direction: column;
  background: #fff;
  box-sizing: border-box;
  width: 96%;
  font-size: 28rpx;
  color: #333;
  line-height: 70rpx;
  padding: 10rpx 10rpx 0 10rpx;
  text-align: center;
}

.class-item:first-child {
  margin-top: 15rpx;
}

.class-item-title {
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.class-item-bottom {
  height: 15rpx;
}

.class-item-line {
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
}

.border-bottom {
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.class-item-left {
  width: 30%;
}

.class-item-right {
  width: 70%;
  font-size: 26rpx;
}

.right-special {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.right-special image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.fonts-bold{
  font-weight: 500;
}

.clock_at{
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
}

.normal-clock{
  color: #333;
}

.late-clock{
  color: #FF8C00;
}

.absent-clock{
  color: #FF3030;
}