.container {
  font-size: 16px;
  align-items: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.question-item{
  display: flex;
  flex-direction: column;
  width: 96%;
  padding: 20rpx 2%;
  color: #333;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  background: #fff;
}

.item-title{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 70rpx;
}

.item-content{
  font-size: 28rpx;
  line-height: 50rpx;
}