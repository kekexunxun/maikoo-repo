<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item  " bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <!--  收藏的小程序列表  -->
          <view class='container' wx:if="{{isHaveMini}}">
            <!--  小程序信息  -->
            <block wx:for="{{miniList}}" wx:key="">
              <view class='mini-info' bindtap='navToMiniDetail' data-index='{{index}}'>
                <view class='mini-image'>
                  <image class='mini-pic' src="{{item.mini.avatarUrl}}"> </image>
                </view>
                <view class='info-right'>
                  <view class='info-data'>
                    <view class='data-detail'>
                      <view class='data-detail-left'>名称：</view>
                      <view class='data-detail-right'>{{item.mini.name}}</view>
                    </view>
                    <view class='data-detail'>
                      <view class='data-detail-left'>关键词：</view>
                      <view class='data-detail-right'>{{item.mini.keywords}}</view>
                    </view>
                    <view class='data-detail'>
                      <view class='data-detail-left'>当前热度：</view>
                      <view class='data-detail-right'>{{item.mini.views}}</view>
                    </view>
                  </view>
                  <view class='action'>
                    <image src='../../images/fav-true.png' catchtap='cancelUserFav' data-idx='{{item.idx}}' data-favid='{{item.fav_id}}' data-index="{{index}}"></image>
                    <navigator target="miniProgram" open-type="navigate" app-id="{{item.mini.appid}}" path="" version="release" catchtap="miniClick" hover-class="none" data-index="{{index}}">
                      <image src='../../images/enter.png'></image>
                    </navigator>
                  </view>
                </view>
              </view>
            </block>
          </view>
          <view class='container' wx:else>
            <text class='no-info'>还没有收藏任何小程序哦，快去收藏吧</text>
          </view>
          <!--  收藏的小程序列表 END  -->
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <!--  收藏的专题列表  -->
          <view class='container' wx:if="{{isHaveColumn}}">
          </view>
          <view class='container' wx:else>
            <text class='no-info'>还没有收藏任何专题哦，快去收藏吧</text>
          </view>
          <!--  收藏的专题列表  END  -->
        </view>
      </view>
    </view>
  </view>
</view>