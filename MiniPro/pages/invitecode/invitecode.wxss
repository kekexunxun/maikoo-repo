.invite-code{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.invite-code{
  margin-top: 150px;
}

.invite-code text{
  color: #333;
  font-size: 16px;
  margin-left: 15%;
}

.invite-code input{
  width: 70%;
  margin-left: 15%;
  margin-top: 10px;
  margin-bottom: 20px;
  line-height: 38px;
  height: 38px;
  font-size: 16px;
  text-align: left;
  padding-left: 5%;
  border: 1rpx solid gainsboro;
  border-radius: 12px;
}

.confirm-button{
  width: 60%;
  margin: 0 20%;
  margin-top: 20px;
  height: 45px;
  line-height: 45px;
}
.confirm-button button{
  height: 45px;
  line-height: 45px;
  width: 60%;
  margin: 0 20%;
}