@import '../../style/weui.wxss';

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  text-align: center;
}

.weui-navbar__item {
  padding: 14rpx 0;
}

.weui-navbar__title{
  font-size: 32rpx;
}

.weui-navbar {
  height: 80rpx;
  border-bottom: none;
}

.weui-tab__panel {
  padding-top: 20rpx;
}

.justify-style {
  width: 160rpx;
}

.scroll-view {
  overflow-y: hidden;
  height: 80rpx;
  white-space: nowrap;
  display: flex;
}

.container {
  text-align: left;
}

.no-info {
  font-size: 30rpx;
  margin-top: 200rpx;
  color: #666;
}

.course-item {
  font-size: 28rpx;
  color: #333;
  line-height: 25px;
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  border-radius: 5px;
  width: 96%;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
}

.course-img {
  width: 100%;
  margin: 15rpx 0;
}

.course-img image {
  width: 100%;
  height: 300rpx;
  border-radius: 5px;
}

.course-name {
  font-size: 28rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  word-break: break-all;
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
  /* border-bottom: 1rpx solid rgba(220, 220, 220, 0.6); */
  padding-left: 15rpx;
  color: #666;
}

.course-time {
  font-size: 24rpx;
  color: #999;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  padding-left: 15rpx;
  line-height: 60rpx;
}

.course-brief {
  color: #666;
}
