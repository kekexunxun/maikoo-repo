<view class="container">

  <!-- 需要发送的班级 -->
  <view class="select-class border-around">
    <view class='select-class-left'>班级选择</view>
    <view class='select-class-right'>
      <picker bindchange="chooseClass" value="{{index}}" range="{{classPicker}}">
        <view class="picker">
          {{classPicker[classIdx]}}
        </view>
      </picker>
    </view>
  </view>
  <view class="select-class">
    <view class='select-class-left'>学生选择</view>
    <view class='select-student-right'>
      <scroll-view scroll-x="true" class='select-student-scorll'>
        <block wx:for="{{stuList}}" wx:key="uid">
          <view class='select-student-item' bindtap='selectStudent' data-idx='{{index}}'>
            <view class='select-student-item-item'>
              <image src="{{item.select ? '/images/icon-select-active.png' : '/images/icon-select.png'}}"></image>
            <text>{{item.username}}</text>
            </view>
          </view>
        </block>
      </scroll-view>
    </view>
  </view>
  <!-- 反馈内容 -->
  <view class='feedback-title'>消息内容</view>
  <view class='feedback-content'>
    <textarea bindinput='inputMessage' value='{{message}}' placeholder='我想要说点什么' maxlength='140'></textarea>
  </view>

  <!-- 图片上传 -->
  <view class='feedback-image'>
    <block wx:if="{{image[0]}}">
      <view class="image-box">
        <image src='{{image[0]}}' mode='aspectFill' bindtap='previewImage'></image>
      </view>
    </block>
    <view class="weui-uploader__input-box">
      <view class="weui-uploader__input" bindtap="chooseImage"></view>
    </view>
  </view>

  <view class='line'></view>

  <!-- 反馈按钮 -->
  <view class='feedback-btn'>
    <form report-submit='true' bindsubmit='sendMessage'>
      <button form-type='submit' type='primary'>发送消息</button>
    </form>
  </view>
</view>