page{
  background: #f9f9f9;
}

.container{
  box-sizing: border-box;
}

.activity-list{
  display: flex;
  margin: 10rpx 2%;
  flex-direction: column;
}

.activity-item{
  display: flex;
  flex-direction: column;
  padding: 5rpx 2%;
  background-color: white;
  border-radius: 10px;
  margin: 10rpx 0;
}
.item-title{
  font-size: 32rpx;
  color: #333;
  line-height: 25px;
}
.item-brief{
  font-size: 24rpx;
  color: #666;
  line-height: 25px;
}
.item-pic image{
  width: 100%;
  height: 300rpx;
  border-radius: 5px;
}

/*  没有活动时  */
.nothing{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.wait{
  font-size: 32rpx;
  color: #333;
}