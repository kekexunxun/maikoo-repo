@import "../../utils/wxParse/wxParse.wxss";

page {
  background: #f2f2f2;
}

.container {
  margin-bottom: 150rpx;
}

/*  banner  */

.goods-banner {
  width: 100%;
}

.goods-banner image {
  width: 100%;
  height: 200px;
}

/*  info  */

.goods-brief {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: white;
}

.goods-name {
  font-size: 16px;
  padding-top: 15rpx;
  padding-bottom: 8rpx;
  padding-left: 2%;
  padding-right: 2%;
  color: #333;
  line-height: 22px;
}

.goods-price-area {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.goods-price-left {
  width: 50%;
  padding-left: 3%;
  display: flex;
  flex-direction: column;
}

.goods-price-right {
  width: 50%;
  padding-right: 3%;
  line-height: 25px;
  text-align: right;
}

.goods-price {
  line-height: 25px;
  font-size: 17px;
  color: #f6a934;
  padding-left: 5%;
}

.goods-price text {
  font-size: 19px;
}

.goods-price-ori {
  line-height: 20px;
  font-size: 15px;
  color: #999;
  padding-left: 5%;
  position: relative;
}

.goods-price-ori-line {
  position: absolute;
  top: 11px;
  border-bottom: 1rpx solid gainsboro;
  width: 80px;
  left: 3%;
}

.goods-courier {
  color: #999;
  font-size: 16px;
  line-height: 25px;
  padding-left: 3%;
  padding-top: 8px;
  padding-bottom: 8px;
}

/*  TABBAR  */

.goods-tab {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 2px;
}

.goods-tab-item {
  width: 50%;
}

.active {
  background-color: white;
}

.goods-info {
  display: flex;
  flex-direction: row;
  line-height: 40rpx;
  color: #999;
  font-size: 12px;
  padding: 10rpx 2%;
}

.logi {
  /* width: 33.3%; */
  text-align: left;
}

.stock {
  width: 33.3%;
  text-align: center;
}

.item-stock {
  color: #666;
  text-align: right;
  font-size: 24rpx;
  padding: 8rpx 10rpx;
}

.sellnum {
  width: 33.3%;
  text-align: right;
}

/*  底部按钮  */

.bottom-btn {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.btn-service {
  width: 20%;
  position: relative;
}

.btn-service image {
  width: 40rpx;
  height: 40rpx;
}

.btn-service button {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  padding-top: 10rpx;
  border-radius: 0;
  height: 100rpx;
}

.btn-service text {
  line-height: 46rpx;
}

.btn-addcart {
  width: 30%;
}

.btn-buy {
  width: 30%;
  background-color: #f6a934;
  color: white;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
}

/*  去掉button的border  */

button::after {
  border: none;
  border-radius: 0;
}

.discount {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
}

.btn-share {
  height: 100rpx;
  background-color: #e6c597;
  color: white;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
}

/*  产品分类  */

.good-type, type-list {
  display: flex;
  flex-direction: column;
}

.good-type {
  margin-top: 15rpx;
}

.type-title {
  font-size: 30rpx;
  color: #333;
  padding: 15rpx 15rpx;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  background: white;
  font-weight: bold;
}

.type-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  background: white;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  line-height: 40rpx;
  align-items: center;
}

.item-right, .item-left {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.item-left {
  width: 60%;
}

.item-right {
  width: 40%;
}

.item-name, .item-price, .item-intro {
  font-size: 28rpx;
  /* line-height: 40rpx; */
  padding: 8rpx 10rpx;
}

.item-intro {
  font-size: 24rpx;
  color: #666;
}

.item-price {
  color: #f6a934;
  text-align: right;
}

.item-market-price {
  text-decoration: line-through;
  color: #999;
  font-size: 24rpx;
  text-align: right;
  padding: 8rpx 10rpx;
}

.item-keywords {
  display: flex;
  flex-direction: row;
}

.item-keywords button {
  padding: 0 12rpx;
  font-size: 22rpx;
  background: #fff;
  border: 1rpx solid rgba(220, 220, 220, 0.8);
  border-radius: 3px;
  margin: 6rpx;
  line-height: 40rpx;
  color: #333;
}

.item-pay {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.buy-btn {
  padding: 0 12rpx;
  font-size: 22rpx;
  background: #fff;
  border: 1rpx solid rgba(220, 220, 220, 0.8);
  border-radius: 3px;
  margin: 6rpx;
  line-height: 40rpx;
  color: #333;
}

.goods-detail-info {
  line-height: 40rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  position: absolute;
  bottom: -100rpx;
  left: 0;
}

.goods-detail {
  background: white;
  font-size: 15px;
  color: #333;
  margin-top: 15rpx;
}

.goods-detail-text {
  padding: 10rpx 20rpx;
  font-size: 30rpx;
}

.goods-detail-type-one {
  display: flex;
  flex-direction: row;
  padding: 0 2%;
  line-height: 40rpx;
  font-size: 34rpx;
}

.type-one-price {
  color: #f6a934;
}

.type-one-price text {
  color: #666;
  font-size: 26rpx;
  text-decoration: line-through;
}

.type-one-promiton {
  font-size: 28rpx;
  color: #e6c597;
}
