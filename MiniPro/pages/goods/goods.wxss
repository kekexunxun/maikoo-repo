page {
  background: #fff;
}

/*  商品  */

.ticket {
  background: white;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.ticket-title {
  font-size: 30rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.ticket-title-left {
  width: 50%;
  padding-left: 5%;
  color: #333;
}

.ticket-title-left text {
  margin-left: 10rpx;
  color: #666;
  text-align: bottom;
  font-size: 26rpx;
}

.ticket-title-right {
  width: 50%;
  position: relative;
  padding-right: 5%;
}

.ticket-title-right text {
  color: #999;
  position: absolute;
  right: 15%;
  font-size: 26rpx;
  vertical-align: bottom;
}

.ticket-title-right image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 5%;
  top: 20rpx;
}

.ticket-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.ticket-item {
  width: 50%;
  height: 400rpx;
  justify-content: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ticket-item image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20px;
}

.ticket-item text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}
