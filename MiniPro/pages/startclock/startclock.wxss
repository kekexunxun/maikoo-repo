.container {
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
}

/* 班级选择 */

.select-class {
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  text-align: center;
}

.select-class-left {
  width: 20%;
}

.select-class-right {
  width: 80%;
  line-height: 80rpx;
  font-size: 30rpx;
}

.picker{
  font-size: 28rpx;
}

.student-select {
  margin: 30rpx 10% 15rpx 10%;
  box-sizing: border-box;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #333;
  width: 80%;
}

.nomargin{
  margin: 0 10% 15rpx 10%;
}

.already-clock-title{
  margin-top: 50rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  padding: 20rpx;
  width: 75%;
  text-align: center;
}

.student-select-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  text-align: center;
}

.select-student-middle{
  width: 60%;
}

.select-student-right{
  width: 25%;
}

.select-student-left {
  width: 15%;
  display: flex;
  justify-content: center;
}

.select-student-left image {
  width: 36rpx;
  height: 36rpx;
}

/* bottom-btn */
.bottom-btn{
  position: fixed;
  bottom: 0;
  height: 90rpx;
  width: 100%;
}

.bottom-btn button{
  border-radius: 0;
  font-size: 30rpx;
  line-height: 90rpx;
  color: #fff;
  width: 100%;
}

button::after{
  border: none;
}

/* 打卡失败 */
.select-student-left-special{
  width: 25%;
  text-align: center;
}

.special-right{
  width: 75%;
  font-size: 24rpx;
  color: #FF4040;
}

.special-title{
  color: #FF4040;
}