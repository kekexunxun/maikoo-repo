/* container */

.container {
  display: flex;
  flex-direction: column;
  background: #fff;
}

/* feedback */

.feedback-title {
  line-height: 90rpx;
  width: 100%;
  text-indent: 1rem;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
}

.feedback-content {
  height: 350rpx;
  width: 100%;
}

.feedback-content textarea {
  color: #666;
  font-size: 30rpx;
  padding: 1rem;
  height: 350rpx;
  box-sizing: border-box;
  width: 100%;
}

/* feedback-image */

.feedback-image {
  height: 160rpx;
}

.weui-uploader__input-box {
  float: left;
  position: relative;
  width: 154rpx;
  height: 154rpx;
  border: 1rpx solid #d9d9d9;
}

.weui-uploader__input-box:after, .weui-uploader__input-box:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.weui-uploader__input-box:before {
  width: 4rpx;
  height: 80rpx;
}

.weui-uploader__input-box:after {
  width: 80rpx;
  height: 4rpx;
}

.weui-uploader__input-box:active {
  border-color: #999;
}

.weui-uploader__input-box:active:after, .weui-uploader__input-box:active:before {
  background-color: #999;
}

.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.image-box {
  float: left;
  position: relative;
  width: 154rpx;
  height: 154rpx;
  border: 1rpx solid #d9d9d9;
}

.image-box image {
  width: 154rpx;
  height: 154rpx;
  z-index: 2;
}

/* line */

.line {
  margin-top: 15px;
  height: 1rpx;
  width: 100%;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

/* feedback-bottom-btn */

.feedback-btn {
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
}

.feedback-btn button {
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
  border-radius: 0;
}
