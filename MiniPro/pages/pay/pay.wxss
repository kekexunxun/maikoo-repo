/* container */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  font-family: 'Microsoft Yahei', "微软雅黑";
  margin-bottom: 100rpx;
}

/* address */

.address {
  margin-bottom: 15rpx;
}

/* 无地址 */

.address-btn {
  width: 100%;
  height: 120rpx;
  color: #fff;
  background-color: #019944;
  font-size: 30rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 0;
}

button::after {
  border: none;
  border-radius: 0;
}

/* 有地址 */

.address-content {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  background: #019944;
  color: #fff;
}

.address-info {
  line-height: 60rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.address-info-image {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.address-info image {
  width: 40rpx;
  height: 40rpx;
}

/* 订单栏目 order-item */

.order-item {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.item-margin-bottom {
  margin-bottom: 15rpx;
}

.item-border-bottom {
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.order-item-left {
  width: 25%;
  text-align: center;
  color: #333;
}

.order-item-middle {
  width: 65%;
  text-align: right;
}

.order-item-right {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.order-item-right image {
  width: 60rpx;
  height: 60rpx;
}

/* order-item 下的一些组件 */

.text-align-right {
  text-align: right;
}

.input {
  height: 80rpx;
  line-height: 80rpx;
}

.overwrite-middle {
  width: 75%;
  text-align: right;
  color: #ff9000;
  padding-right: 20rpx;
}

/* 商品信息 */

.goods-list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  padding-bottom: 10rpx;
}

.goods-item {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  padding: 5rpx 0;
}

.goods-item-left {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 20%;
}

.goods-item-left image {
  height: 80rpx;
  width: 80rpx;
}

.goods-item-middle {
  width: 60%;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.goods-item-right {
  width: 20%;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #333;
  padding-right: 20rpx;
  text-align: right;
}

.price-color {
  color: #ff9000;
  font-size: 30rpx;
}

/* bottom */

.detail-bottom {
  position: fixed;
  bottom: 0;
  height: 90rpx;
  width: 100%;
}

.detail-bottom button {
  background: #019944;
  font-size: 32rpx;
  height: 90rpx;
  font-weight: 500;
  line-height: 90rpx;
  border-radius: 0;
  color: #fff;
  text-align: center;
  width: 100%;
  padding: 0;
}
