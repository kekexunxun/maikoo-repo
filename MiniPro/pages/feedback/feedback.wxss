/* feedback */

.feedback-item {
  display: flex;
  flex-direction: column;
  width: 96%;
  box-sizing: border-box;
  margin: 0 2%;
  padding: 10rpx 20rpx;
  line-height: 60rpx;
  border: 1rpx solid rgba(220, 220, 220, 0.6);
  margin-bottom: 30rpx;
  border-radius: 5px;
}

.feedback-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.feedback-title-left {
  width: 50%;
  color: #666;
  font-size: 24rpx;
}

.feedback-title-right {
  width: 50%;
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

.feedback-content {
  display: flex;
  flex-direction: row;
  margin: 15rpx 0;
}

.feedback-content-img {
  display: flex;
  flex: 20%;
  justify-content: center;
}

.feedback-content-img image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 5px;
}

.feedback-content-text {
  color: #333;
  font-size: 26rpx;
  text-indent: 1rem;
  flex: 100%;
}

.feedback-bottom {
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 26rpx;
  border-top: 1rpx solid rgba(220, 220, 220, 0.6);
}

.not-replay{
  color: #FFA500;
}

/* new-feedback */

.new-feedback {
  position: fixed;
  right: 8%;
  bottom: 10%;
  background: #019944;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.new-feedback image {
  width: 40rpx;
  height: 40rpx;
}
