<import src="/template/coupon.wxml" />
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for-items="{{tabs}}" wx:key="{{index}}">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <!-- 未使用 -->
        <block wx:for="{{couponList}}" wx:key="status">
          <view class="weui-tab__content" hidden="{{activeIndex != index}}">
            <view class='coupon-list' wx:if="{{couponList[activeIndex].list.length > 0}}">
              <block wx:for="{{couponList[activeIndex].list}}" wx:key="">
                <template is="coupon" data="{{...item}}" />
              </block>
            </view>
            <view class='no-coupon' wx:else>
              <image src='/images/icon-coupon.png'></image>
              <text>没有该类型的优惠券~</text>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>