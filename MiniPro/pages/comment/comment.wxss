page {
  background: #fff;
}

.container {
  display: flex;
  flex-direction: column;
}

/* comment-item */

.comment-item {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
  background: #fff;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-title {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.comment-title-img {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 19%;
}

.comment-title-img image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 5px;
}

.comment-title-com {
  width: 27%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: safe center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.comment-title-com image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.comment-content {
  height: 220rpx;
  width: 100%;
}

.comment-content textarea {
  height: 220rpx;
  width: 100%;
  padding: 20rpx 2%;
  font-size: 28rpx;
  box-sizing: border-box;
}

.line {
  height: 15rpx;
  background: #f8f8f8;
  width: 100%;
}

/* shop-comment */

.shop-comment {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.shop-comment-line {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 2%;
  height: 70rpx;
}

.shop-title image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.shop-title text {
  color: #333;
  font-size: 28rpx;
}

.shop-item image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 5rpx;
}

.shop-item text {
  color: #666;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.rate-score {
  margin-left: 15rpx;
}

/* bottom-btn */

.bottom-btn {
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
}

.bottom-btn button {
  width: 100%;
  height: 80rpx;
  color: #fff;
  line-height: 80rpx;
  font-size: 30rpx;
  background: #f7540f;
  border-radius: 0;
}

button::after {
  border: none;
}
