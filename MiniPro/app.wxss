
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 


/* course */
.column-display {
  display: flex;
  flex-direction: column;
}

.course-list {
  padding: 0 2%;
  width: 96%;
}

.course-item {
  font-size: 30rpx;
  color: #333;
  line-height: 25px;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.course-img {
  width: 100%;
  height: 300rpx;
}

.course-img image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}

.course-name{
  font-size: 34rpx;
  line-height: 30px;
}

.course-time{
  font-size: 26rpx;
  color: #999;
}

.course-brief{
  color: #666;
}

/* 没有数据时的展示 */
.nothing{
  padding: 180rpx 0;
  font-size: 32rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  line-height: 30px;
}

/* button-border */
button::after {
  border: none;
}