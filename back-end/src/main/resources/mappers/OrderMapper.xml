<?xml version="1.0" encoding="utf8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maikoo.superminercions.dao.OrderDao">
    <resultMap id="orderResultMap" type="OrderDO">
        <result property="id" column="id"/>
        <result property="orderSN" column="order_sn"/>
        <result property="status" column="status"/>
        <result property="note" column="note"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="customerDO" resultMap="com.maikoo.superminercions.dao.CustomerDao.customerResultMap" columnPrefix="c_user_" />
    </resultMap>

    <update id="updateStatus">
        UPDATE
            c_order
        SET
            <if test="status != null">
                status = #{status},
            </if>
            <if test="note != null">
                note = #{note},
            </if>
            updated_at = UNIX_TIMESTAMP(NOW())
        WHERE
            order_sn = #{orderSN}
    </update>
</mapper>