page {
  background: #f5f3f0;
}

.nav-menu {
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.nav-menu-item {
  width: 25%;
  height: 100rpx;
  position: relative;
}

.nav-menu-item text {
  font-size: 32rpx;
  color: #b6b6b6;
}

.nav-menu .active {
  color: #2d2922;
}

.border-line {
  position: absolute;
  width: 40%;
  bottom: 0;
  height: 8rpx;
  background: #eccd67;
}

swiper {
  padding: 20rpx 15rpx;
  background: rgba(1, 1, 1, 0);
}

swiper image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
