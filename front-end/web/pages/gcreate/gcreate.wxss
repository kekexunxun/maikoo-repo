.nav-menu {
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.6);
}

.nav-menu-item {
  width: 25%;
  position: relative;
}

.nav-menu .normal, .nav-menu .active {
  padding: 16rpx;
  border-radius: 40px;
  color: #2d2922;
  font-size: 28rpx;
  height: 80rpx;
  width: 144rpx;
  margin: 24rpx 0;
}

.nav-menu .normal {
  border: 1rpx solid #e9e9e9;
}

.nav-menu .active {
  border: 1rpx solid rgba(1, 1, 1, 0);
}

.form-addpic {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}

.img-border {
  border: 1rpx solid rgba(220, 220, 220, 0.6);
}

.img-ctn {
  padding: 0;
}

.form-for-textarea {
  height: 180rpx !important;
}

.form-for-img {
  height: 140rpx !important;
}

.brief-text {
  align-items: flex-start;
  justify-content: flex-start;
  padding: 10rpx 0;
}

.qyml-form textarea {
  height: 180rpx;
  line-height: 40rpx;
}

.addr-img {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  right: 0;
}

.default-btn button {
