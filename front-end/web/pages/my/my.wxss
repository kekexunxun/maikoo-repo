.qyml-form-item {
  padding: 0 50rpx;
}

.arrow-img {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  right: 0;
}

.my-form {
  margin-top: 20rpx;
}

.my-form-img {
  width: 42rpx;
  height: 42rpx;
  margin-right: 22rpx;
}

.default-btn {
  height: 60rpx;
  width: 180rpx;
}

.default-btn button {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  color: #2d2922;
}

.spot-text {
  width: 130rpx;
}

.spot {
  background: #f43530;
  font-size: 12rpx;
  position: absolute;
  right: 0;
  top: 0;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.qyml-form-item:first-child {
  border-top: 1rpx solid #ececec;
}

.nickname {
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx 0;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  background: #f2f2f2;
  border-radius: 50%;
  margin-top: -100rpx;
}

.avatar-bg {
  width: 100%;
  height: 292rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-image: url("data:image/png;base64,");
}
