page {
  background: #f5f3f0;
}

.container {
  padding-bottom: 30rpx;
  padding-top: 120rpx;
}

/* search */

.search-bar {
  height: 120rpx;
  width: 100%;
  padding: 30rpx;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 10;
}

.search-bar input {
  font-size: 28rpx;
  color: #2d2922;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background: #f5f3f0;
  border-radius: 20px;
  padding-left: 100rpx;
}

.search-bar image {
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  left: 70rpx;
}

/* group-item */

.group-item {
  margin-top: 20rpx;
  margin-left: 70rpx;
  height: 220rpx;
  background: #fff;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(170, 167, 154, 0.4);
}

.group-name {
  position: absolute;
  left: 140rpx;
  top: 20rpx;
  font-size: 28rpx;
  color: #2d2922;
}

.group-mem-count {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  font-size: 28rpx;
  color: #eccd67;
}

.group-address {
  position: absolute;
  left: 140rpx;
  top: 80rpx;
  font-size: 24rpx;
  color: #b6b6b6;
}

.tag {
  position: absolute;
  left: 140rpx;
  bottom: 30rpx;
  font-size: 22rpx;
  color: #2d2922;
  width: 100rpx;
  height: 40rpx;
  border-radius: 30rpx;
}

.group-item image {
  position: absolute;
  left: -40rpx;
  top: 30rpx;
  height: 160rpx;
  width: 160rpx;
  border-radius: 20px;
}

.group-item {
  align-items: flex-start;
  justify-content: flex-start;
}

.create-group button{
  padding: 0;
  height: 120rpx;
  width: 120rpx;
  background: linear-gradient(270deg, rgba(255, 218, 130, 1) 0%, rgba(255, 243, 198, 1) 100%);
}

.create-group {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(141, 138, 123, 0.4);
}

.create-group text{
  font-size: 22rpx;
  color: #695a40;
  line-height: 36rpx;
}

.create-group image{
  height: 56rpx;
  width: 56rpx;
}

/* no-group */
.no-group{
  font-size: 32rpx;
  color: #93928e;
  margin-top: 100rpx;
  text-align: center;
}