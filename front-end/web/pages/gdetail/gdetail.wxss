.container {
  padding-bottom: 150rpx;
}

.group-detail {
  margin: 60rpx 30rpx 30rpx 30rpx;
  background: #2d2922;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  justify-content: flex-start;
  padding-top: 80rpx;
  padding-bottom: 20rpx;
}

.img-ctn {
  padding: 0;
  position: absolute;
  top: -60rpx;
  width: 100%;
}

.g-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.g-name {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #eccd67;
}

.tag {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 40rpx;
  color: #2d2922;
  font-size: 22rpx;
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
}

.line {
  height: 4rpx;
  opacity: 0.2;
  width: 650rpx;
  border: 1rpx solid rgba(105, 90, 64, 1);
}

.g-brief {
  margin-top: 20rpx;
  padding: 0 20rpx;
  color: #b7ae9d;
  font-size: 26rpx;
  width: 100%;
  line-height: 40rpx;
  justify-content: flex-start;
  align-items: left;
}

.g-brief-left {
  width: 100rpx;
  justify-content: space-between;
}

.g-brief-right {
  width: 550rpx;
}

.g-brief-left-line {
  width: 8rpx;
  height: 24rpx;
  background: #eccd67;
}

.g-setting {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  color: #eccd67;
}

/* search */

.search-bar {
  height: 120rpx;
  width: 100%;
  padding: 30rpx;
  background: #fff;
}

.search-bar input {
  font-size: 28rpx;
  color: #2d2922;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background: #f5f3f0;
  border-radius: 20px;
  padding-left: 100rpx;
}

.search-bar image {
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  left: 70rpx;
}

/* mem-item */

.mem-item {
  margin: 0 30rpx;
  border-bottom: 1rpx solid #ececec;
}

.mem-left {
  width: 20%;
  height: 160rpx;
}

.mem-left image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}

.mem-right {
  width: 80%;
  height: 160rpx;
  font-size: 26rpx;
  padding: 20rpx 0 20rpx 20rpx;
  line-height: 60rpx;
}

.mem-right-line1, .u-info {
  align-items: baseline;
  justify-content: space-between;
}

.mem-right-comp {
  color: #989898;
}

.mem-right-community {
  color: #2d2922;
}

.u-name {
  color: #2d2922;
  font-size: 30rpx;
}

.u-pos {
  color: #2d2922;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.u-admin {
  color: #eccd67;
}

.u-nor {
  color: #b6b6b6;
}

/* share-btn */

.share-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  /* border-top: 1rpx solid #ececec; */
}

.share-btn button {
  font-size: 32rpx;
  color: #695a40;
  height: 80rpx;
  line-height: 80rpx;
}
