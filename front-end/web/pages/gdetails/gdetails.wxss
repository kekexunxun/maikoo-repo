.container {
  padding-bottom: 150rpx;
}

.group-detail {
  margin: 60rpx 30rpx 30rpx 30rpx;
  background: #2d2922;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  justify-content: flex-start;
  padding-top: 80rpx;
  padding-bottom: 20rpx;
}

.img-ctn {
  padding: 0;
  position: absolute;
  top: -60rpx;
  width: 100%;
}

.g-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.g-name {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #eccd67;
}

.tag {
  height: 40rpx;
  color: #2d2922;
  font-size: 22rpx;
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
  margin: 20rpx 0;
}

.line {
  height: 4rpx;
  width: 650rpx;
  opacity: 0.2;
  border: 1rpx solid rgba(105, 90, 64, 1);
}

.g-brief {
  margin-top: 20rpx;
  padding: 0 20rpx;
  color: #b7ae9d;
  font-size: 26rpx;
  width: 100%;
  line-height: 40rpx;
  justify-content: flex-start;
  align-items: flex-start;
}

.g-brief-left {
  width: 100rpx;
  justify-content: space-between;
}

.g-brief-right {
  width: 550rpx;
}

.g-brief-left-line {
  width: 8rpx;
  height: 24rpx;
  background: #eccd67;
}

/* member-section */

.member-section {
  margin: 0 30rpx;
}

.sec-title {
  justify-content: space-between;
  width: 100%;
  margin-top: 20rpx;
  height: 70rpx;
  line-height: 60rpx;
  align-items: baseline;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #ececec;
}

.sec-title .text {
  font-size: 30rpx;
  color: #2d2922;
  font-weight: 500;
}

.sec-title .mem-count {
  font-size: 26rpx;
  color: #989898;
}

.sec-list {
  width: 100%;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.sec-item {
  width: 20%;
  height: 180rpx;
}

.sec-item image {
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.sec-item text {
  font-size: 26rpx;
  color: #2d2922;
}

/* share-btn */

.share-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  /* border-top: 1rpx solid #ececec; */
}

.share-btn button {
  font-size: 32rpx;
  color: #695a40;
  height: 80rpx;
  line-height: 80rpx;
}
